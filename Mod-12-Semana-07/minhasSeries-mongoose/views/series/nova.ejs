<%- include('../partials/header') %>
    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <form method="post">
              <h2>Nova Série:</h2>
                <div class="form-group">
                <label for="status">Nova série:</label>
                <input type="text" class="form-control" name="name" id="name" aria-describedby="name" placeholder="Informe a série">
                <small id="name" class="form-text text-muted">Informe o nome da série a ser salva.</small>
                <% if(errors && errors.indexOf('name') >=0) { %>
                  <small id="nameHelp" class="form-text text-muted">Informe o nome da série</small>
                <% } %>
              </div>
                <div class="form-group">
                <label for="status">Situação:</label>
                <select class="form-control" id="status" name="status">
                  <option value="to-watch">Para assistir</option>
                  <option value="watching">Assistindo</option>
                  <option value="watched">Assistido</option>
                </select>
              </div>
              <button class="btn btn-primary mb-2">Salvar</button>
            </form>
          </div>
        </div>
      </div>
    </section>
<%- include('../partials/footer') %>